{
	"version": "2.0.0",
	"tasks": [
		{
			"label":"C build for clang",
			"type":"shell",
			"command":"gcc",
			"args": [
				"-g",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"${file}"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"presentation": {
				"clear": true
			},
			"group":{
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "C++ build for clang++",
			"type": "shell",
			"command": "clang++",
			"args": [
				"-g",
				"${file}",
				"-o",
				"&{fileDirname|/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"presentation": {
				"clear": true
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "execute",
			"command": "${fileDirname}/${fileBasenameNoExtension}",
			"group": "test",
			"presentation": {
				"clear": true
			}
		}

	]
}